@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, KvikChik
@using Data;
@using KvikChik.Models.ViewModels;
@model KvikChik.Models.ViewModels.FoodsListViewModel
@{

}

<div class="card">
    <div class="card-header">
        <h1>Список блюд</h1>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-3">
                <a class="btn btn-primary" asp-controller="AdminFood" asp-action="Create">Добавить блюдо</a>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                @if (Model.Foods.Count == 0)
                {
                    <p>Список блюд пуст</p>
                }
                else
                {
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>№</th>
                                <th>Название</th>
                                <th>Дата создания</th>
                                <th>Дата изменения</th>
                                <th>Действия</th>
                            </tr>
                        </thead>
                        <tbody>

        <!--            //foreach (Food item1 in Model)  
                        // {
                           // Html.Partial("Allfoods",item1)
                           // }
                                                -->
                            @foreach (var item in Model.Foods.Select((value, index) => new { index, value }))
                            {
                                <tr>
                                    <td>@(item.index + 1)</td>
                                    <td>@item.value.Name</td>
                                    <td>@item.value.Description</td>
                                    <td>@item.value.CreatedDate</td>
                                    <td>@item.value.ModifiedDate</td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a class="btn btn-dark" asp-controller="AdminFood" asp-action="Update" asp-route-Id="@item.value.Id">
                                                Редактировать
                                            </a>
                                            <button class="btn btn-danger" type="submit" form="delete-form-@item.value.Id">
                                                Удалить
                                            </button>
                                        </div>
                                        <form class="delete-form" asp-controller="AdminFood" asp-action="Delete" asp-route-Id="@item.value.Id" method="post" id="delete-form-@item.value.Id" data-name="@item.value.Name"></form>
                                    </td>
                                </tr>
                            }




                        </tbody>

                    </table>

                    <page-link page-view-model="Model.PageViewModel"
                               page-action="FoodsList"
                               page-url-sortOrder="@(Model.SortViewModel.Current)"
                    ></page-link>
                }
            </div>
        </div>
    </div>
</div>

