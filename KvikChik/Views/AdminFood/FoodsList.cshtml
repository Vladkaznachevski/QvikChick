@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, KvikChik
@using Data;
@using KvikChik.Models.ViewModels;
@model KvikChik.Models.ViewModels.FoodsListViewModel
@{

}

<div class="card">
    <div class="card-header">
        <h1>Список блюд</h1>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-3">
                <a class="btn btn-primary" asp-controller="AdminFood" asp-action="Create">Добавить блюдо</a>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                @if (Model.Foods.Count == 0)
                {
                    <p>Список блюд пуст</p>
                }
                else
                {


        <!--            //foreach (Food item1 in Model)  
                        // {
                           // Html.Partial("Allfoods",item1)
                           // }
                                                -->

                            <form method="get" asp-controller="AdminFood" asp-action="FoodsList">
                                <div class="form-inline">
                                    <label>Имя: </label>
                                    <input name="search" value="@Model.FilterViewModel.SelectedName" class="form-control" />
                                    <input type="submit" value="Фильтр" class="btn btn-outline-dark" />
                                </div>
                            </form>

                            <table class="table">
                                @foreach (Food u in Model.Foods)
                                {
                                    <tr><td>@u.Name</td><td>@u.Description</td><td>@u.Size</td></tr>
                                }
                            </table>






                    <page-link page-view-model="Model.PageViewModel"
                               page-action="FoodsList"
                               page-url-sortOrder="@(Model.SortViewModel.Current)"
                    ></page-link>
                }
            </div>
        </div>
    </div>
</div>

