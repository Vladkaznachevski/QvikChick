@using Data;
@using KvikChik.Models.ViewModels;
@model List<Data.Food>
@{
    ViewData["Name"] = "Добавление нового блюда";
    ViewData["Description"] = "Добавление нового блюда";
    ViewData["Size"] = "Добавление нового блюда";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h1>Список блюд</h1>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-3">
                <a class="btn btn-primary" asp-controller="AdminFood" asp-action="Create">Добавить блюдо</a>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                @if (Model.Count == 0)
                {
                    <p>Список блюд пуст</p>
                }
                else
                {
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                               
                                <th>Название</th>
                                <th>Дата создания</th>
                                <th>Дата изменения</th>
                                <th>Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                        
                            @foreach (Food item1 in Model)
                            {
                            @Html.Partial("Allfoods",item1)
                            }
                           
                        </tbody>

                    </table> 
                }
            </div>
        </div>
    </div>
</div>

