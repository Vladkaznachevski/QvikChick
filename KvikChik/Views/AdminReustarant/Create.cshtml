@model KvikChik.Models.ViewModels.ReustarantViewModel
@{
    
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h1>Добавление нового ресторана</h1>
    </div>
    <div class="card-body">
        <form asp-controller="AdminReustarant" asp-action="Create" method="post">
            <div class="mb-3">
                <label asp-for="Address" class="form-label">Название</label>
                <input type="text" class="form-control" asp-for="Address">



            </div>
            <button type="submit" class="btn btn-primary">Сохранить</button>
        </form>
    </div>
</div>

